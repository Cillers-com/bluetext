{
  "repos": [
    { "name": "demo-transaction-service", "path": "../demo-transaction-service" },
    { "name": "demo-payment-service", "path": "../demo-payment-service" },
    { "name": "demo-user-service", "path": "../demo-user-service" }
  ],
  "excludeGlobs": [
    "**/node_modules/**",
    "**/.git/**",
    "**/dist/**",
    "**/build/**",
    "**/.venv/**",
    "**/.idea/**",
    "**/.vscode/**"
  ],
  "includeFileExtensions": [
    ".ts",
    ".tsx",
    ".js",
    ".jsx",
    ".mjs",
    ".cjs",
    ".py",
    ".json",
    ".yaml",
    ".yml"
  ],
  "urlBases": [
    { "name": "payment-var", "repo": "demo-payment-service", "baseUrl": "/${PAYMENT_SERVICE_URL}" },
    { "name": "transaction-var", "repo": "demo-transaction-service", "baseUrl": "/${TRANSACTION_SERVICE_URL}" },
    { "name": "user-var", "repo": "demo-user-service", "baseUrl": "/${USER_SERVICE_URL}" }
  ],
  "indexPath": "multirepo-index.json"
}
